@model IEnumerable<UniversityDepartmentSystem.Application.Dtos.SpecialtyDto>
@{
    Layout = "_Layout";
}

<h2>Специальности</h2>

<a asp-controller="Specialties" asp-action="Create">Создать новую специальность</a>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Отдел</th>
            <th>Количество курсов</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var specialty in Model)
        {
            <tr>
                <td>@specialty.Name</td>
                <td>@specialty.Department.Name</td>
                <td>@specialty.Courses.Count</td>
                <td>
                    <a asp-controller="Specialties" asp-action="Details" asp-route-id="@specialty.Id">Детали</a> |
                    <a asp-controller="Specialties" asp-action="Delete" asp-route-id="@specialty.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>