@model UniversityDepartmentSystem.Application.Dtos.SpecialtyDto
@{
    Layout = "_Layout";
}

<h2>Детали специальности</h2>

<div>
    <h4>Специальность</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Отдел</dt>
        <dd class="col-sm-10">@Model.Department.Name</dd>

        <dt class="col-sm-2">Курсы</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var course in Model.Courses)
                {
                    <li>@course.CourseNumber</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<a asp-controller="Specialties" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a asp-controller="Specialties" asp-action="Index">Назад к списку</a>