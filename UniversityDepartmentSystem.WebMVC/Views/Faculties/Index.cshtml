@model IEnumerable<UniversityDepartmentSystem.Application.Dtos.FacultyDto>
@{
    Layout = "_Layout";
}

<h2>Факультеты</h2>

<a asp-controller="Faculties" asp-action="Create">Создать новый факультет</a>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Количество отделов</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var faculty in Model)
        {
            <tr>
                <td>@faculty.Name</td>
                <td>@faculty.Departments.Count</td>
                <td>
                    <a asp-controller="Faculties" asp-action="Details" asp-route-id="@faculty.Id">Детали</a> |
                    <a asp-controller="Faculties" asp-action="Delete" asp-route-id="@faculty.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>