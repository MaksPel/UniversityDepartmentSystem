@model UniversityDepartmentSystem.Application.Dtos.FacultyDto
@{
    Layout = "_Layout";
}

<h2>Детали факультета</h2>

<div>
    <h4>Факультет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Отделы</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var department in Model.Departments)
                {
                    <li>@department.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<a asp-controller="Faculties" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a asp-controller="Faculties" asp-action="Index">Назад к списку</a>