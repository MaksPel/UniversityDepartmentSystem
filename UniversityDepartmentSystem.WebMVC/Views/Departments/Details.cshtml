@model UniversityDepartmentSystem.Application.Dtos.DepartmentDto
@{
    Layout = "_Layout";
}

<h2>Детали кафедры</h2>

<div>
    <h4>Отдел</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Выпускной</dt>
        <dd class="col-sm-10">@Model.IsGraduating</dd>

        <dt class="col-sm-2">Факультет</dt>
        <dd class="col-sm-10">@Model.Faculty.Name</dd>

        <dt class="col-sm-2">Специальности</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var specialty in Model.Specialties)
                {
                    <li>@specialty.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<a asp-controller="Departments" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a asp-controller="Departments" asp-action="Index">Назад к списку</a>