@model IEnumerable<UniversityDepartmentSystem.Application.Dtos.DepartmentDto>
@{
    Layout = "_Layout";
}

<h2>Кафедры</h2>

<a asp-controller="Departments" asp-action="Create">Создать новую кафедру</a>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Выпускной</th>
            <th>Факультет</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>@(department.IsGraduating ? "Да" : "Нет")</td>
                <td>@department.Faculty.Name</td>
                <td>
                    <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.Id">Детали</a> |
                    <a asp-controller="Departments" asp-action="Delete" asp-route-id="@department.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>