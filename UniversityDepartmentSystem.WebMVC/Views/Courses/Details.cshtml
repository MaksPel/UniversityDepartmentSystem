@model UniversityDepartmentSystem.Application.Dtos.CourseDto
@{
    Layout = "_Layout";
}

<h2>Детали курса</h2>

<div>
    <h4>Курс</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Номер курса</dt>
        <dd class="col-sm-10">@Model.CourseNumber</dd>

        <dt class="col-sm-2">Номер семестра</dt>
        <dd class="col-sm-10">@Model.SemesterNumber</dd>

        <dt class="col-sm-2">Специальность</dt>
        <dd class="col-sm-10">@Model.Specialty.Name</dd> 

        <dt class="col-sm-2">Предметы</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var subject in Model.Subjects)
                {
                    <li>@subject.Name</li> 
                }
            </ul>
        </dd>
    </dl>
</div>

<a asp-controller="Courses" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a asp-controller="Courses" asp-action="Index">Назад к списку</a>