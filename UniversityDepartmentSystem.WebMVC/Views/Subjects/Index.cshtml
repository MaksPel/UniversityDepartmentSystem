@model IEnumerable<UniversityDepartmentSystem.Application.Dtos.SubjectDto>
@{
    Layout = "_Layout";
}

<h2>Предметы</h2>

<a asp-controller="Subjects" asp-action="Create">Создать новый предмет</a>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Лекции (ч)</th>
            <th>Практические (ч)</th>
            <th>Лабораторные (ч)</th>
            <th>Тип отчетности</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.Name</td>
                <td>@subject.LectureHours</td>
                <td>@subject.PracticalHours</td>
                <td>@subject.LabHours</td>
                <td>@subject.ReportingType</td>
                <td>
                    <a asp-controller="Subjects" asp-action="Details" asp-route-id="@subject.Id">Детали</a> |
                    <a asp-controller="Subjects" asp-action="Delete" asp-route-id="@subject.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>