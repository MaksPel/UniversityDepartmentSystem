@model UniversityDepartmentSystem.Application.Dtos.SubjectDto
@{
    Layout = "_Layout";
}

<h2>Детали предмета</h2>

<div>
    <h4>Предмет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Лекции (ч)</dt>
        <dd class="col-sm-10">@Model.LectureHours</dd>

        <dt class="col-sm-2">Практические (ч)</dt>
        <dd class="col-sm-10">@Model.PracticalHours</dd>

        <dt class="col-sm-2">Лабораторные (ч)</dt>
        <dd class="col-sm-10">@Model.LabHours</dd>

        <dt class="col-sm-2">Тип отчетности</dt>
        <dd class="col-sm-10">@Model.ReportingType</dd>

        <dt class="col-sm-2">Курсы</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var course in Model.Courses)
                {
                    <li>@course.CourseNumber</li>
                }
            </ul>
        </dd>

        <dt class="col-sm-2">Преподаватели</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var teacher in Model.Teachers)
                {
                    <li>@teacher.Name @teacher.Surname</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<a asp-controller="Subjects" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a asp-controller="Subjects" asp-action="Index">Назад к списку</a>