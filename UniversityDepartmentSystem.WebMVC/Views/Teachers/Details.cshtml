@model UniversityDepartmentSystem.Application.Dtos.TeacherDto
@{
    Layout = "_Layout";
}

<h2>Детали преподавателя</h2>

<div>
    <h4>Преподаватель</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Имя</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Фамилия</dt>
        <dd class="col-sm-10">@Model.Surname</dd>

        <dt class="col-sm-2">Отчество</dt>
        <dd class="col-sm-10">@Model.Midname</dd>

        <dt class="col-sm-2">Должность</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Возраст</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Предметы</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var subject in Model.Subjects)
                {
                    <li>@subject.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<a asp-controller="Teachers" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a asp-controller="Teachers" asp-action="Index">Назад к списку</a>