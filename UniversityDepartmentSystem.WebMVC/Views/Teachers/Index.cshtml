@model IEnumerable<UniversityDepartmentSystem.Application.Dtos.TeacherDto>
@{
    Layout = "_Layout";
}

<h2>Преподаватели</h2>

<a asp-controller="Teachers" asp-action="Create">Создать нового преподавателя</a>
<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Должность</th>
            <th>Возраст</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.Surname</td>
                <td>@teacher.Midname</td>
                <td>@teacher.Position</td>
                <td>@teacher.Age</td>
                <td>
                    <a asp-controller="Teachers" asp-action="Details" asp-route-id="@teacher.Id">Детали</a> |
                    <a asp-controller="Teachers" asp-action="Delete" asp-route-id="@teacher.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>